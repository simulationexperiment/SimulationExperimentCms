<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      理论回顾
    </li>
    <li class="active">知识点</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      知识点
      <small>
        <i class="icon-double-angle-right"></i>
        详细信息
      </small>
    </h1>
  </div>

  <div class="form-search">
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputEmail2">系统类别</label>&nbsp;
        <select class="search-control" ng-model="model.selectedSystem4Search" ng-options="system as system.systemName for system in model.systemList4Search"></select>
      </div>
      &nbsp;
      <div class="form-group">
        <label for="exampleInputEmail2">添加人</label>&nbsp;
        <select class="search-control" ng-model="model.selectedCreator" ng-options="teacher as teacher.teacherName for teacher in model.teacherList4Search"></select>
      </div>
      &nbsp;
      <button type="button" class="btn btn-sm btn-info btn-search" ng-click="onSearch()">
        <i class="icon-search"></i>
        查询
      </button>
    </form>
  </div>
  <div class="space-6"></div>

  <div class="row">
    <div class="col-xs-12">
      <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#myModal">
        <i class="icon-plus"></i>
        添加
      </button>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">序号</th>
            <th class="center">系统</th>
            <th class="center">知识点名称</th>
            <th class="center">知识点内容</th>
            <th class="center">实验步骤</th>

            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">
                <img src="{{this.bankLogo}}" style="width: 120px">
              </td>
              <td>{{this.bankCode}}</td>
              <td>{{this.bankName}}</td>
              <td>{{this.dataStatusText}}</td>
              <td>{{this.createUser}}</td>
              <td>{{this.createTime}}</td>
              <td>{{this.updateUser}}</td>
              <td>{{this.updateTime}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <button type="button" class="btn btn-sm btn-primary" ng-click="onChange({{this.bankID}})">
                    <i class="icon-edit"></i>
                    修改
                  </button>
                  {{# if this.isNormal}}
                    <button type="button" class="btn btn-sm btn-danger" ng-click="onDelete('{{this.bankID}}','{{this.bankName}}')">
                      <i class="icon-trash"></i>
                      删除
                    </button>
                  {{/if}}

                  {{# if this.isFrozen}}
                    <button type="button" class="btn btn-sm btn-success" ng-click="onRecover('{{this.bankID}}','{{this.bankName}}')">
                      <i class="icon-reply"></i>
                      恢复
                    </button>
                  {{/if}}
                  {{# if this.isDelete}}
                    <button type="button" class="btn btn-sm btn-success" ng-click="onRecover('{{this.bankID}}','{{this.bankName}}')">
                      <i class="icon-reply"></i>
                      恢复
                    </button>
                  {{/if}}
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/bank?pageNumber={{prePageNum}}">
                <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/bank?pageNumber={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/bank?pageNumber={{nextPageNum}}">
                <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </div>

  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">维护知识点</h4>
        </div>
        <div class="alert alert-danger store-alert hidden">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <span></span>
        </div>
        <form class="form-horizontal" name="myForm" novalidate>
          <div class="modal-body">
            <div class="form-group">
              <label class="col-sm-2 control-label">系统类别</label>
              <div class="col-sm-10">
                <select class="form-control" ng-model="model.selectedSystem4Search" ng-options="system as system.systemName for system in model.systemList4Search"></select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">知识点名称</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" maxlength="50" name="knowledgeName" ng-model="model.knowledgeName" required placeholder="请输入知识点名称">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">知识点内容</label>
              <div class="col-sm-10">
                <textarea class="form-control" maxlength="500" id="knowledgeContent" name="knowledgeContent" ng-model="model.knowledgeContent" required placeholder="请输入知识点内容"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">实验步骤</label>
              <div class="col-sm-10">
                <textarea class="form-control" maxlength="500" id="experimentStep" name="experimentStep" ng-model="model.experimentStep" required placeholder="请输入实验步骤"></textarea>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-primary"> <i class="icon-save"></i>提交</button>
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal"><i class="icon-remove"></i>关闭</button>
          </div>
        </form>

      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<input type="hidden" value="{{dataStatus}}" id="hidden-dataStatus">
<script src="/javascripts/view/knowledge.js"></script>