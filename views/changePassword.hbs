<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      账户信息
    </li>
    <li class="active">密码修改</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      密码修改
      <small>
        <i class="icon-double-angle-right"></i>
        详细信息
      </small>
    </h1>
  </div>
  <div class="space-6"></div>
  <div class="row">
    <div class="col-xs-12">

      <form class="form-horizontal" name="myForm" novalidate>
        <div class="form-group">
          <label class="col-sm-2 control-label">原始密码</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" name="password" ng-model="model.password" required placeholder="请输入原始密码">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">新密码</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" name="newPassword" ng-model="model.newPassword" required placeholder="请输入新密码">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">确认密码</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" name="confirmPassword" ng-model="model.confirmPassword" required placeholder="请输入确认密码">
          </div>
        </div>


        <div class="modal-footer center">
          <button type="button" class="btn btn-primary" ng-disabled="myForm.password.$pristine ||
                                                                            myForm.newPassword.$pristine ||
                                                                            myForm.confirmPassword.$pristine ||
                                                                            (myForm.password.$dirty && myForm.password.$invalid) ||
                                                                            (myForm.newPassword.$dirty && myForm.newPassword.$invalid) ||
                                                                            (myForm.confirmPassword.$dirty && myForm.confirmPassword.$invalid) ||
                                                                            model.newPassword != model.confirmPassword" ng-click="onChangePassword()">
            <i class="icon-save"></i>修改密码</button>
        </div>
      </form>

    </div>
  </div>


</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/changePassword.js"></script>