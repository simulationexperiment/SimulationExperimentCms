<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      课程表
    </li>
    <li class="active">总课程表</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      总课程表
      <small>
        <i class="icon-double-angle-right"></i>
        详细信息
      </small>
    </h1>
  </div>

  <div class="form-search">
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputEmail2">系统类别</label>&nbsp;
        <select class="search-control" ng-model="model.selectedSystem4Search" ng-options="system as system.systemName for system in model.systemList4Search"></select>
      </div>
      &nbsp;
      <button type="button" class="btn btn-sm btn-info btn-search" ng-click="onSearch()">
        <i class="icon-search"></i>
        查询
      </button>
    </form>
  </div>
  <div class="space-6"></div>
  <div class="row">
    <div class="col-xs-12">

      <div class="space-6"></div>
      <div class="table-header">
        所有课程
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">星期/节次</th>
            <th class="center">星期一</th>
            <th class="center">星期二</th>
            <th class="center">星期三</th>
            <th class="center">星期四</th>
            <th class="center">星期五</th>
            <th class="center">星期六</th>
            <th class="center">星期日</th>
            <th ng-if="model.userRole != 'S'" class="hidden-480">添加</th>
            <th ng-if="model.userRole != 'S'">
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">第{{this.courseOrder}}节课</td>
              <td>{{this.mondayCourse}}</td>
              <td>{{this.tuesdayCourse}}</td>
              <td>{{this.wednesdayCourse}}</td>
              <td>{{this.thursdayCourse}}</td>
              <td>{{this.fridayCourse}}</td>
              <td>{{this.saturdayCourse}}</td>
              <td>{{this.sundayCourse}}</td>
              <td ng-if="model.userRole != 'S'">{{this.createUser}}</td>
              <td ng-if="model.userRole != 'S'">{{this.createTime}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

    </div>
  </div>


</div>


<input type="hidden" value="{{systemID}}" id="hidden-systemID">
<script src="/javascripts/view/classSchedule.js"></script>