<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      账户信息
    </li>
    <li class="active">账户管理</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      账户管理
      <small>
        <i class="icon-double-angle-right"></i>
        详细信息
      </small>
    </h1>
  </div>
  <div class="space-6"></div>
  <div class="row">
    <div class="col-xs-12">
      <a href="/users/edit" class="btn btn-sm btn-primary">
        <i class="icon-plus"></i>
        添加
      </a>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">账号</th>
            <th class="center">教师号/学号</th>
            <th class="center">姓名</th>
            <th class="center">性别</th>
            <th class="center">角色</th>
            <th class="center">电子邮箱</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td>{{this.cellphone}}</td>
              <td>{{this.userCode}}</td>
              <td>{{this.fullName}}</td>
              <td>{{this.sexText}}</td>
              <td>{{this.userRoleText}}</td>
              <td>{{this.email}}</td>
              <td>{{this.createUser}}</td>
              <td>{{this.createTime}}</td>
              <td>{{this.updateUser}}</td>
              <td>{{this.updateTime}}</td>
              <td>
                {{#if this.isShowOption}}
                  <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                    <button type="button" class="btn btn-sm btn-success" ng-click="onChange({{this.userID}})">
                      <i class="icon-edit"></i>
                      修改
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" ng-click="onDelete('{{this.userID}}', '{{this.fullName}}', '{{this.userRole}}')">
                      <i class="icon-trash"></i>
                      删除
                    </button>
                  </div>
                {{/if}}
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/users?pageNumber={{prePageNum}}">
                <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/users?pageNumber={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/users?pageNumber={{nextPageNum}}">
                <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/users.js"></script>