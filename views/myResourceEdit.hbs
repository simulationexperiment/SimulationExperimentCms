<link rel="stylesheet" href="/stylesheets/fileUpload/iconfont.css" />
<link rel="stylesheet" href="/stylesheets/fileUpload/fileUpload.css">
<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="/bank">教学资源</a>
    </li>
    <li class="active">资源编辑</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      教学资源
      <small>
        <i class="icon-double-angle-right"></i>
        资源编辑
      </small>
    </h1>
  </div>
  <div class="row edit-content">
    <div class="col-xs-12">
      <div class="edit-info">
        <div class="detail-content">
          <form class="form-horizontal" name="myForm" novalidate>
            <div class="form-group">
              <label class="col-sm-2 control-label">所属系统</label>
              <div class="col-sm-10">
                <select class="form-control" ng-model="model.selectedSystem" ng-options="system as system.systemName for system in model.systemList"></select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">所属课程</label>
              <div class="col-sm-10">
                <select class="form-control" ng-model="model.selectedCourse" ng-options="course as course.courseName for course in model.courseList"></select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">资源类型</label>
              <div class="col-sm-10">
                <select class="form-control" ng-model="model.selectedSourceType" ng-options="sourceType as sourceType.sourceTypeName for sourceType in model.sourceTypeList"></select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">审核人</label>
              <div class="col-sm-10">
                <select class="form-control" ng-model="model.selectedAuditor" ng-options="teacher as teacher.teacherName for teacher in model.teacherList"></select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">上传资源</label>
              <div class="col-sm-10">
                <div id="file-upload-resource" class="fileUploadContent"></div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <a href="/knowledge" class="btn btn-default"><i class="icon-reply"></i>返回</a>
                <button type="button" class="btn btn-success" ng-disabled="model.selectedSystem.systemID == 0
                                                                          || model.selectedCourse.courseID == 0
                                                                          || model.selectedSourceType.sourceTypeID == 0
                                                                          || model.selectedAuditor.teacherID == 0
                                                                          || model.resourceUri == ''" ng-click="onSubmit()">
                  <i class="icon-save"></i>提交
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <input type="hidden" value="{{resourceID}}" id="hidden-resourceID">
</div>

<script src="/javascripts/fileUpload/fileUpload.js"></script>
<script src="/javascripts/view/myResourceEdit.js"></script>