<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/stylesheets/bootstrap-3.3.7/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/font-awesome-3.2.1/font-awesome.min.css' />
  <link rel="stylesheet" href="/stylesheets/googleapis/googleapis.css" />
  <link rel="stylesheet" href="/stylesheets/ace/ace.min.css" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="/stylesheets/view/login.css" />
  <script src="/javascripts/angular-1.7.8/angular.min.js"></script>
  <script src="/javascripts/jquery-2.2.0/jquery-2.2.0.min.js"></script>
  <script src="/javascripts/bootstrap-3.3.7/bootstrap.min.js"></script>
  <script src="/bootbox/bootbox.min.js"></script>
  <script src="/javascripts/view/common.js"></script>
  <script src="/javascripts/view/login.js"></script>
</head>
<body class="login-layout">
  <div class="main-container" >
  <div class="main-content" ng-app="myApp" ng-controller="myCtrl">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="login-container">
          <div class="center">
            <div class="space-16"></div>
            <h1>
              <img src="/images/xy_logo.jpg" style="width: 375px;" alt="">
            </h1>
            <div class="space-16"></div>
            <h4 class="blue" id="id-company-text">虚拟仿真实验教学后台管理系统</h4>
          </div>

          <div class="space-6"></div>

          <div class="position-relative">
            <div id="login-box" class="login-box visible widget-box no-border">
              <div class="widget-body">
                <div class="widget-main">
                  <h4 class="header blue lighter bigger">
                    <i class="ace-icon icon-coffee green"></i>
                    请输入您的登陆信息
                  </h4>

                  <div class="space-6"></div>

                  <form name="myForm" novalidate>
                    <fieldset>
                      <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                          <input type="text" class="form-control" maxlength="11" name="cellphone" ng-model="model.cellphone" required placeholder="手机号码/用户名" autofocus/>
                          <i class="ace-icon icon-user"></i>
                        </span>
                      </label>

                      <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                          <input type="password" class="form-control" maxlength="6" name="password" ng-model="model.password" required placeholder="密码" />
                          <i class="ace-icon icon-lock"></i>
                        </span>
                      </label>

                      <div class="space"></div>

                      <div class="clearfix">
                        <label class="inline">
                          <input type="checkbox" class="ace" name="remember" ng-model="model.remember"/>
                          <span class="lbl"> 记住我</span>
                        </label>

                        <button type="button" class="width-35 pull-right btn btn-sm btn-primary" ng-disabled="myForm.cellphone.$dirty && myForm.cellphone.$invalid
                                                                                                            || myForm.password.$dirty && myForm.password.$invalid" ng-click="onLogin()">
                          <i class="ace-icon icon-key"></i>
                          <span class="bigger-110">登陆</span>
                        </button>
                      </div>

                      <div class="space-4"></div>
                    </fieldset>
                  </form>
                </div><!-- /.widget-main -->

                <div class="toolbar clearfix">
                  <div>

                  </div>

                  <div>

                  </div>
                </div>
              </div><!-- /.widget-body -->
            </div><!-- /.login-box -->
          </div><!-- /.position-relative -->

        </div>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.main-content -->
</div>
</body>
</html>